{
  "name": "NBA Clutch Time Notifier",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Extension notifies you whenever the score becomes close in a live NBA game.",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
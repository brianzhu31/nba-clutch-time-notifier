{
  "name": "NBA Clutch Time Notifier",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "Provides real-time notifications for close and competitive NBA games in the final quarter",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  }
}